<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InfoUser"
    android:background="@color/azulsereno">

    <TextView
        android:id="@+id/chart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="270dp"
        android:text="Qual tipo vocÃª usa?"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:fontFamily="@font/montextra"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnCigarro"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/view"
        android:fontFamily="@font/montextra"
        android:onClick="escolha"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:scaleX="1.2"
        android:scaleY="1.2"
        android:text="CIGARRO"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:elevation="10dp"
        app:backgroundTint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chart" />

    <Button
        android:id="@+id/btnVape"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/view"
        android:fontFamily="@font/montextra"
        android:onClick="escolha"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:scaleX="1.2"
        android:scaleY="1.2"
        android:text="VAPE"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:elevation="10dp"
        app:backgroundTint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnCigarro" />

</androidx.constraintlayout.widget.ConstraintLayout>