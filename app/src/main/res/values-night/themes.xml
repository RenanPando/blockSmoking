<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BlockSmoking" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/azulsereno</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.BlockSmokingSecondary" parent="Theme.BlockSmoking">
        <item name="android:statusBarColor">@color/cianoEscuro</item>
    </style>

    <style name="Theme.BlockSmokingTerciary" parent="Theme.BlockSmoking">
        <item name="android:statusBarColor">@color/white</item>
    </style>

    <style name="Theme.splashFumas" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/azulsereno</item>
        <item name="android:windowBackground">@drawable/splash_bg</item>
    </style>

    <style name="ToolbarAppearance" parent="android:TextAppearance">
        <item name="android:fontFamily">@font/montextra</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextAppearance" parent="android:TextAppearance">
        <item name="android:fontFamily">@font/montextra</item>
    </style>
</resources>